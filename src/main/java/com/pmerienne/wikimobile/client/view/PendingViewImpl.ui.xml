<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

	<ui:style>
		.centered {
			margin: auto;
			margin-top: 50px
		}
		
		.message {
			text-align: center;
			padding: 20px;
		}
	</ui:style>

	<mgwt:LayoutPanel>
		<mgwt:HeaderPanel>
			<mgwt:center>
				<g:HTML text="Wiki Mobile" />
			</mgwt:center>
		</mgwt:HeaderPanel>

		<mgwt:ScrollPanel>
			<g:HTMLPanel>
				<mgwt:ProgressIndicator addStyleNames="{style.centered}" />
				<g:HTML ui:field="message" text="Veuillez patienter"
					addStyleNames="{style.message}" />
			</g:HTMLPanel>
		</mgwt:ScrollPanel>
	</mgwt:LayoutPanel>
</ui:UiBinder> 